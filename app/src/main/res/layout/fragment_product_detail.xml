<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ProductDetailFragment"
    android:background="#F3F1F1">

    <TextView
        android:id="@+id/textViewTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="İlan Detayları"
        android:textSize="24sp"
        android:background="#2A82DF"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:padding="10dp"/>


        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:layout_below="@id/textViewTop"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewProductName"
            android:background="#F3F1F1"
            android:textColor="@color/black"
            android:text="Ürün İsmi"
            android:textAlignment="center"
            android:textSize="23sp" />




    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewProductName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/imageViewProduct"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"/>
    </com.google.android.material.card.MaterialCardView>


        <TextView
            android:fontFamily="sans-serif-condensed-medium"
            android:id="@+id/textViewProductSeller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardImageView"
            android:layout_margin="5dp"
            android:text="Satıcı/Şehir"
            android:textSize="19sp"
            android:background="#F3F1F1"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textAlignment="center" />

    <TextView
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:id="@+id/textViewProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:text="Ürün Fiyatı"
        android:textSize="21sp"
        android:layout_below="@id/textViewProductSeller"
        android:background="#F3F1F1"
        android:textColor="#1F79D8"
        android:textAlignment="textEnd"
        />

    <TextView
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_margin="10dp"
        android:id="@+id/textViewProductDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ürün Açıklaması"
        android:textSize="20sp"
        android:background="#F3F1F1"
        android:textColor="#1F79D8"
        android:padding="7dp"
        android:textAlignment="textStart"
        android:layout_below="@id/textViewProductPrice" />


    <Button
        android:id="@+id/addProductToShoppingCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/add_to_basket"
        android:textSize="17sp"
        android:backgroundTint="#D31B1B"
        android:layout_margin="10dp"
        android:textAllCaps="false"/>


</RelativeLayout>